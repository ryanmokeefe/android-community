<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ijeomaeze.nowyouseeme.MainActivity">
    <!-- This line(above) will be a little different for you based off how you named your project -->

   <ImageView
       android:id="@+id/star"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/startwo"
       android:scaleType="fitCenter"
       android:visibility="invisible"/>

    <Button
        android:id="@+id/seeMeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now You See Me"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/hideMeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now You Don't"
        android:layout_gravity="center"/>

</LinearLayout>
